:scss
  //init colors
  $blue: blue;
  $green: green;
  $orange: orange;

  .export-budgets{
    .header{
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      .new-budget-btn{
        margin-right: -15px;
      }
    }
    //.documents_search {
    //  margin: 15px;
    //  border-radius: 5px;
    //}
    .paginator {
      text-align: center;
    }
    .table-title{
      font-weight: bold;
      border-bottom: solid lightgrey 2px;
      padding: 5px 0;
      text-align: left;
      & > div:last-child{
        text-align: center;
      }
    }
    .table-body{
      border-bottom: solid lightgrey 1px;
      padding: 5px 0;
      & div{
        min-height: 22px;
      }
    }
    .files-action-button{
      display: flex;
      justify-content: center;
      a{
        text-decoration: none;
        background: transparent;
        padding: 0 5px;
      }
    }
    .reset-padding{
      padding: 0;
      & > .reset-padding{
        & div{
          overflow: hidden;
          white-space: nowrap;
          word-wrap: normal; /* for IE */
          text-overflow: ellipsis;
        }
      }
    }
    @media (min-width: 992px) {
      .reset-padding{
        & > .reset-padding{
          & > div:hover{
            overflow: visible;
            white-space: normal;
            word-wrap: break-word;
            font-size: smaller;
          }
        }
      }
    }
    @media (max-width: 991.9px) {
      .reset-padding{
        & div{
          border-bottom: solid lightcyan 1px;
        }
      }
      .files-action-button{
        flex-direction: column;
      }
      .fact-icon,
      .plan-icon,
      .pf-icon{
        height: 2rem;
        width: 2rem;
        font-size: 1.3rem;
      }
    }
    @media (max-width: 384px) {
      .reset-padding{
        & > .reset-padding{
          & div{
            font-size: small;
          }
        }
      }
    }
  }

.container.export-budgets
  .header
    %h2= t('layouts.navbar_admin.pdf_budgets')
    .new-budget-btn
      %h2= link_to t('export_budgets.index.new_btn'), new_export_budget_path, :class => 'btn btn-info'

  =render partial: 'list'