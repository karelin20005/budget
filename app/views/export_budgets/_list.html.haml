.row.table-title.text-center.visible-md.visible-lg
  .col-md-11.reset-padding
    .col-sm-1
      =t('export_budgets.index.year')
    .col-sm-4
      =t('export_budgets.index.title')
    .col-sm-4
      =t('export_budgets.index.town')
    .col-sm-3
      =t('export_budgets.index.author')
  .col-md-1.reset-padding
    =t 'form.actions', :default => t("helpers.actions")
- if @export_budgets
  - @export_budgets.each do |export_budget|
    .row.table-body{'data-id' => export_budget.id}
      .col-xs-11.reset-padding
        .col-md-1.reset-padding
          .col-xs-4.visible-sm.visible-xs
            =t('export_budgets.index.year')
          .col-xs-8.col-md-12
            = export_budget.year
        .col-md-4.reset-padding
          .col-xs-4.visible-sm.visible-xs
            =t('export_budgets.index.title')
          .col-xs-8.col-md-12
            = export_budget.title
        .col-md-4.reset-padding
          .col-xs-4.visible-sm.visible-xs
            =t('export_budgets.index.town')
          .col-xs-8.col-md-12
            = export_budget.town
        .col-md-3.reset-padding
          .col-xs-4.visible-sm.visible-xs
            =t('export_budgets.index.author')
          .col-xs-8.col-md-12
            = export_budget.author
      .col-xs-1.text-center.reset-padding.files-action-button
        = link_to export_budget do
          %i.fa.fa-eye.fa-2x
        -if(export_budget.user_can_edit?(current_user))
          = link_to edit_export_budget_path(export_budget) do
            %i.fa.fa-pencil.fa-2x
          = link_to export_budget, :method => :delete, :data => { :confirm => 'Are you sure?' } do
            %i.fa.fa-trash-o.fa-2x
.paginator
  = paginate @export_budgets