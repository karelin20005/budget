:scss

  // init colors
  $dark-blue: #0c2231;
  $green-blue: #7D94A4;
  $white: white;
  $font-size-title: 1.4rem;

  .new_info_panel{
    min-width: 220px;
    border: 1px solid $dark-blue;
    .header{
      padding: 7px 5px 5px 7px;
      background: $dark-blue;
      color: $white;
      vertical-align: bottom;
      .amount{
        float:left;
        //text-align: center;
        font-size: 1.7rem;
        font-weight: 600;
        //text-transform: lowercase; // for pluralize
      }
      .start_date{
        padding-right: 15px;
        float: right;
        font-weight: 600;
        font-size: 1.7rem;
      }
    }
    .title_repair{
      padding: 5px 7px 2px 7px;
      font-size: $font-size-title;
      line-height: 1.3;
      color: $dark-blue;

    }
    .more-text{
        font-weight: bold;
        font-style: italic;
        font-size: $font-size-title;
        text-align: right;
        color: $dark-blue;
        cursor: pointer;
        padding: 2px 4px;
        &:hover,
        &:focus{
          color: $green-blue;
        }
      }
  }
.new_info_panel{data: { repair_id: @repair.id.to_s}}
  .header.clearfix
    .amount
      = "â‚´"
      = number_to_human(@repair.amount)
    .start_date
      = @repair.repair_start_date
  .title_repair
    -#%i.fa.fa-graduation-cap
    = @repair.subject.blank? ? @repair.work : @repair.subject
  .more-text
    =t('.more')