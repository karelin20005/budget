- model_class = Subscriber
= content_for :header do
  .head.pull-left
    =t '.title'

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @subscriber.email


= link_to t('form.back'), subscribers_path, :class => 'btn btn-default'
= link_to t('form.edit'), edit_subscriber_path(@subscriber), :class => 'btn btn-default'
= link_to t('form.destroy'), subscriber_path(@subscriber), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
