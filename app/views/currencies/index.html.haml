= content_for :header do
  .head.pull-left
    = t('.head')

%table.table.table-striped
  %thead
    %tr
      %th= t('.short_title')
      %th= t('.title')
      %th= t 'form.actions', :default => t("helpers.actions")
  %tbody
    - @currencies.each do |currency|
      %tr
        %td= link_to currency.short_title
        %td= currency.title
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_currency_path(currency), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), currency_path(currency), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_currency_path, :class => 'btn btn-primary'
