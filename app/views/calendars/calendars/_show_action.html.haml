- actions.each do |calendar_action|
  .external-event.ui-draggable{:style => "color: #{calendar_action.text_color}; background-color: #{calendar_action.color}; position: relative;",
                                "data-holder" => calendar_action.holder,
                                "data-title" => calendar_action.title.html_safe,
                                "data-icon" => calendar_action.icon.html_safe,
                                "data-description" => calendar_action.description.html_safe,
                                "data-responsible" => calendar_action.responsible,
                                "data-color" => calendar_action.color,
                                "data-action_type" => calendar_action.action_type,
                                "data-text_color" => calendar_action.text_color}
    %h5.title{:style => "position: relative;"}
      %span.fa{class: calendar_action.icon}
      = truncate calendar_action.title.html_safe, :length => 100, :omission => '...'
