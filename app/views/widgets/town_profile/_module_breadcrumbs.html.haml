:scss
  //init colors
  $black: black;
  $darkyellow: #ffd304;
  $transparent: transparent;

  .breadcrumb {
    padding: 0 0 30px;
    margin: 0;
    background-color: $transparent;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 500;
    li,
    .active {
      a {
        color: $black;
        text-decoration: none;
      }
    }
    li {
      a {
        &:hover,
        &:focus {
          color: $darkyellow;
        }
      }
    }
    .active {
      a {
        cursor: text;
        border-bottom: 2px solid $darkyellow;
        padding-bottom: 2px;
        &:hover,
        &:focus {
          color: $black;
        }
      }
    }
  }
  .breadcrumb li + li:before {
    font: 26px fontawesome;
    content: '\f105';
    padding: 0 5px;
    color: $black;
    position: relative;
    bottom: -3px;
  }
  .breadcrumb li:nth-child(1):before {
    display: none;
  }

%ol.breadcrumb
  %li.active
    %a{:href => ""}
      = init_text