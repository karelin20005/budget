:css
  #custom_map {
    padding: 0px;
  }
  .map_wrap {
    margin-bottom: 10px;
  }

= content_for :header do
  .head.pull-left
    = t('community.community.edit.head')

.col-xs-12
  #flash_message

.map_wrap.col-xs-12.col-md-6
  = render partial: 'map_region'

#edit_table.col-xs-12.col-md-6
  %p
    = t('community.community.edit.instruction.sentence_click')
  %p
    = t('community.community.edit.instruction.sentence_center')
  %p
    = t('community.community.edit.instruction.sentence_save')
.col-xs-12
  = link_to t('back'), '/community/communities/' + @feature[:properties][:id] + '?locale=' + params[:locale], :class => 'btn btn-default'
